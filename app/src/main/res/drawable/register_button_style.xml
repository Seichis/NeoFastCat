<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#20534e" />
            <gradient  android:angle="-90"  android:startColor="#1B5E20" android:endColor="#00C853"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E65100" />
            <solid  android:color="#E65100"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4CAF50" />
            <gradient  android:angle="-90"  android:startColor="#4CAF50" android:endColor="#00C853" />
        </shape>
    </item>
</selector>